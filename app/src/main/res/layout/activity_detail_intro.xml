<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skroyal00000.dailyworkout.Detail_intro"
    android:orientation="vertical">



    <ViewSwitcher
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btnskip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:text="SKIP"


                    />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/poppins_bold"
                android:text="What's your gender ?"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Let us Know you better" />

            <RadioGroup
                android:id="@+id/radio_grp_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"

                >


                <RadioButton
                    android:id="@+id/radio_btn_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="23dp"
                    android:text="Male"
                    android:textColor="@drawable/text_color_radio" />

                <RadioButton
                    android:id="@+id/radio_btn_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="23dp"
                    android:text="Female"
                    android:textColor="@drawable/text_color_radio" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Next"
                    android:background="@drawable/btn_slector"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </LinearLayout>

<!--        next page-->

        <LinearLayout
            android:id="@+id/nextPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/btnback"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:src="@drawable/back_icon_foreground"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKIP"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="16dp"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="What's your Gym level ?"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Let us Know you better"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_medium"/>

                <RadioGroup
                    android:id="@+id/radio_grp_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"

                    >


                    <RadioButton
                        android:id="@+id/radio_btn_beginner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="23dp"
                        android:text="Beginner"
                        android:textColor="@drawable/text_color_radio" />

                    <RadioButton
                        android:id="@+id/radio_btn_intermediate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="4dp"
                        android:padding="23dp"
                        android:text="Intermediate"
                        android:textColor="@drawable/text_color_radio"
                        android:fontFamily="@font/poppins_semibold"/>

                    <RadioButton
                        android:id="@+id/radio_btn_advanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="4dp"
                        android:padding="23dp"
                        android:text="Advanced"
                        android:textColor="@drawable/text_color_radio"
                        android:fontFamily="@font/poppins_semibold"/>
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/finishbtn"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:text="Finish"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/poppins_semibold"
                        android:background="@drawable/btn_slector"
                        android:textColor="@color/white"/>
                </LinearLayout>

        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>