<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="4dp"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:background="@drawable/feature_card_selector"
       android:padding="10dp">

       <ImageView
           android:id="@+id/shopImage"
           android:layout_width="120dp"
           android:layout_height="110dp"
           android:src="@drawable/chest_icon"
           android:scaleType="centerCrop"
           />


       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:id="@+id/shopTitle"
               android:layout_width="match_parent"
               android:textAlignment="center"
               android:layout_height="wrap_content"
               android:text="shop 1"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:fontFamily="@font/poppins_bold"
               />
          <LinearLayout
              android:layout_marginTop="12dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <ImageView
                  android:id="@+id/shopMiniIcon1"
                  android:layout_marginTop="4dp"
                  android:layout_width="30dp"
                  android:layout_height="15dp"
                  android:src="@drawable/ic_baseline_local_offer_24"
                  android:layout_marginStart="40dp"/>
              <TextView
                  android:id="@+id/shopBuy"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="1600"
                  android:textColor="@color/black"
                  android:textSize="16sp"
                  android:layout_marginLeft="10sp"
                  />
          </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/shopMiniIcon2"
               android:layout_width="30dp"
               android:layout_height="20dp"
               android:src="@drawable/website_link"
               android:layout_marginStart="40sp"/>
           <TextView
               android:id="@+id/shopWebsite"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="1600"
               android:textColor="@color/black"
               android:textSize="17sp"
               android:layout_marginLeft="10sp"
               />
       </LinearLayout>
       </LinearLayout>
   </LinearLayout>


</LinearLayout>