<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="10dp"
    >



    <LinearLayout
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/feature_card_selector"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="3dp"
        >

        <ImageView
            android:id="@+id/imageBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/chest_icon"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Chest"
            android:textColor="@color/black"

            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            >

            <ImageView
                android:id="@+id/miniTitleIcon1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/time_icon"/>
            <TextView
                android:id="@+id/childMiniTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 Minutes"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp">
            <ImageView
                android:id="@+id/miniTitleIcon2"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/exercise_icon"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/childMiniTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 exercise"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>