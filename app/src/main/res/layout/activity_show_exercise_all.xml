<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skroyal00000.dailyworkout.exercise.ExercisePreview"
    android:orientation="vertical"
    android:layout_weight="100"
    android:background="#EEEEEE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="DW"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/settingbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/setting_icon"
            android:translationZ="4dp"
            android:layout_gravity="start"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="50"
        >


        <ImageView
            android:id="@+id/exercise_imageview"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/chest_icon" />
    </RelativeLayout>




    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="50"
        android:elevation="5dp">

        <TextView
            android:textAlignment="center"
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/exercise_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>





        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:paddingLeft="20dp"
                >

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/cancel_icon"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arcprogress"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    app:arc_finished_color="@color/black"
                    app:arc_unfinished_color="@android:color/darker_gray"
                    android:layout_gravity="center"
                    app:arc_bottom_text_size="32sp"
                    app:arc_text_color="@color/black"/>

                <ToggleButton
                    android:id="@+id/play_time_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-39dp"
                    android:background="@drawable/play_icon"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/next"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>