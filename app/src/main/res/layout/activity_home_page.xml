<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skroyal00000.dailyworkout.HomePage">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">



<!--heading-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:text="WorkOut"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:gravity="end">

            <ImageView
                android:id="@+id/setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity=""
                android:background="@drawable/setting_icon" />
        </RelativeLayout>


    </LinearLayout>

<!--  plan-->

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">


           <!--    beginner plan-->
           <RelativeLayout
               android:layout_width="309dp"
               android:layout_height="350dp"
               android:elevation="3dp"
               android:background="@drawable/card_shape"
               android:padding="10dp"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="200dp"
                   android:layout_height="350dp"
                   android:layout_alignParentRight="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/beginner_transparent_img" />

               <TextView
                   android:id="@+id/Beginner_plan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/poppins_medium"
                   android:text="Beginner \n plan"
                   android:textColor="@color/black"
                   android:textSize="25sp" />



               <Button
                   android:id="@+id/joinNowDate"
                   android:layout_width="150dp"
                   android:layout_height="48dp"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="15dp"
                   android:background="@drawable/join_now_btn_background"
                   android:text="Join Now"
                   android:textColor="@color/white" />

           </RelativeLayout>

           <!--    intermidiate plan-->

           <RelativeLayout
               android:layout_width="300dp"
               android:layout_height="350dp"
               android:elevation="3dp"
               android:background="@drawable/card_shape"
               android:padding="10dp"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="170dp"
                   android:layout_height="350dp"
                   android:layout_alignParentRight="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/intermidiate_plan_img" />

               <TextView
                   android:id="@+id/Intermidiate_plan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/poppins_medium"
                   android:text="Intermediate \n plan"
                   android:textColor="@color/black"
                   android:textSize="25sp" />



               <Button
                   android:id="@+id/joinNowDate2"
                   android:layout_width="150dp"
                   android:layout_height="48dp"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="15dp"
                   android:background="@drawable/join_now_btn_background"
                   android:text="Join Now"
                   android:textColor="@color/white" />

           </RelativeLayout>

           <!--    advanced plan-->

           <RelativeLayout
               android:layout_width="300dp"
               android:layout_height="350dp"
               android:elevation="3dp"
               android:background="@drawable/card_shape"
               android:padding="10dp"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="200dp"
                   android:layout_height="350dp"
                   android:layout_alignParentRight="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/advanced_image_2" />

               <TextView
                   android:id="@+id/Advanced_plan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/poppins_medium"
                   android:text="Advanced \n plan"
                   android:textColor="@color/black"
                   android:textSize="20sp" />



               <Button
                   android:id="@+id/joinNowDate3"
                   android:layout_width="150dp"
                   android:layout_height="48dp"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="15dp"
                   android:background="@drawable/join_now_btn_background"
                   android:text="Join Now"
                   android:textColor="@color/white" />

           </RelativeLayout>


       </LinearLayout>

    </HorizontalScrollView>







<!--body focus-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Body focus"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featured_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


<!--    diet-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Custom Exercise"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#e9eff1"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/custom_plan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Plan"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

       <ImageView
           android:id="@+id/create_custom_plan_btn"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_below="@id/custom_plan_txt"
           android:src="@drawable/add_icon"
           android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
