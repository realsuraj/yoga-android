<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skroyal00000.dailyworkout.exercise.ExercisePreview"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:id="@+id/settingbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/setting_icon"
            android:layout_alignParentRight="true"
            android:translationZ="2dp"/>

        <ImageView
            android:id="@+id/exercisePreviewImage"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/chest_icon" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/design_default_color_primary_dark"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:layout_weight="50"
        android:gravity="center">

        <TextView
            android:id="@+id/exercisePreviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/exercisePreviewDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="fsfs"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"/>

    </LinearLayout>



</LinearLayout>